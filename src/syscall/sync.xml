<TestSet Name="sync">
	<Test Name="SyncNormal" FaultSimulationReady="true">
		<Description>Commit buffer cache to disk.</Description>
		<File count="1" />
		<Code>
			const char * buf = "abcdefg";
			Unres (write (FDs[0], buf, strlen(buf)) == -1, "Cannot write to file.");
			
			struct stat stat_buf;
			
			time_t time_before = time(NULL);
			EnableFaultSim();
			sync ();
			
			time_t time_after = time(NULL);
			
			Unres( stat (FilePaths[0].c_str(), &stat_buf) == -1, "stat failed.");
			
			Fail (stat_buf.st_mtime < time_before || stat_buf.st_mtime > time_after, "sync hasn't updated last modification time of the file.");
			
			;
		</Code>
	</Test>	
</TestSet>


