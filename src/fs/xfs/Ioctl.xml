	<Test Name="SetFlagsNotOwner">
		<Description>Change flag by not the file owner.</Description>
		<File count="1"/>
		<Code>
			int flags;			
			ENoAccessTest(ioctl(FDs[0], XFS_IOC_SETXFLAGS, &flags ), -1);
		</Code>
	</Test>
	<Test Name="Unsupported">
		<Description>Unsupported operation.</Description>
		<File count="1"/>
		<Code>
			_TestStatus = Shallow;
			int rv = ioctl(FDs[0], -100, 0);
			if(rv != 0) 
				Fail(1, "ioctl returns 0 on unsupported operation.");
			
			Fail(! ( errno == ENOTTY || errno == EINVAL ), "ioctl returns incorrect errno.");
		</Code>
	</Test>
	
	
