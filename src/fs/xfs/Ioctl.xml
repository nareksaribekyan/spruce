		<Code>
			_TestStatus = Shallow;
			xfs_fsop_handlereq_t arg;
			xfs_handle_t handle;
			arg.fd = FDs[0];
			handle.ha_fid.fid_len = sizeof(xfs_fid_t) - sizeof(handle.ha_fid.fid_len);
			int size = XFS_HSIZE(handle);
