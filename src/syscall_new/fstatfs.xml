<TestSet Name="fstatfs">
	<Test Name="FstatfsNormal" FaultSimulationReady="true">
		<Description>Get file system statistics.</Description>
		<File count="1"/>
		<Code>
			Unres ( ! strcmp(FileSystem,""), "FileSystem env variable is not defined");
			
			if ( FileSystemTypesMap[FileSystem] == -1 )
			{
				Error("fstatfs is not supported by " + static_cast<string>(FileSystem), Unsupported);
			}
						
			struct statfs buf;
			EnableFaultSim();
			if ( fstatfs(FDs[0], &buf) != 0 )
			{
				Error("fstatfs failed.", Fail);
			}
			
			if ( buf.f_type != FileSystemTypesMap[FileSystem] )
			{
				Error("fstatfs returned wrong FS type: " + buf.f_type, Fail);
			}
			return Success;
		</Code>
	</Test>
	<Test Name="FstatfsBadFile">
		<Description>fd is bad.</Description>
		<File count="1"/>
		<Code>
			struct statfs st;
			ErrorTest(fstatfs(-1, &st), -1, EBADF);
		</Code>
	</Test>
	<FaultSimulation>
		<Simulate function="kmalloc" condition="" />
		<Simulate function="copy_to_user" condition="" />
		<!-- ... -->
	</FaultSimulation>
</TestSet>


