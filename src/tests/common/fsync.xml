<TestSet Name="fsync">
	<Test Name="FsyncNormal" FaultSimulationReady="true" Shallow="true">
		<Description>Synchronize a file's in-core state with storage device.</Description>
		<File count="1" />
		<Code>
			const char * buf = "abcdefg";
			Unres (write (FDs[0], buf, strlen(buf)) == -1, "Cannot write to file.");
				
			//Fail(fsync (FDs[0]) == -1, "fsync failed.");
			Check(fsync (FDs[0]) == -1, "fsync failed.");
		</Code>
	</Test>
	<Test Name="FsyncDir" FaultSimulationReady="true" Shallow="true">
		<Description>Synchronize a directory's in-core state with storage device.</Description>
		<Dir count="1" />
		<Code>
			//Fail(fsync (DirDs[0]) == -1, "fsync failed.");
			Check(fsync (DirDs[0]) == -1, "fsync failed.");
		</Code>
	</Test>
	<Test Name="FsyncErrBadFD">
		<Description>fd is not a valid file descriptor open for writing.</Description>
		<Code>
			ErrorTest(fsync(-1), -1, EBADF);
		</Code>
	</Test>
	<Test Name="FsyncErrInvalidArg">
		<Description>fd is bound to a special file which does not support synchronization.</Description>
		<Code>
			ErrorTest(fsync(0), -1, EINVAL);
		</Code>
	</Test>
</TestSet>
